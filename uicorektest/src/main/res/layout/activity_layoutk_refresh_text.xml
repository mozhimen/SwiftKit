                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/ui_blue_633"
                    android:text="item"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/ui_blue_050"
                    android:text="item"
                    android:textColor="@color/ui_blue_666"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </ScrollView>
    </com.mozhimen.uicorek.layoutk.refresh.LayoutKRefresh>
</layout>